{% extends 'base.html.twig' %}

{% block title %}Plats index{% endblock %}

{% block body %}
    <h1>Plats index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Tag</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plat in plats %}
            <tr>
                <td>{{ plat.id }}</td>
                <td>{{ plat.nom }}</td>
                <td>{{ plat.description }}</td>
                <td>{{ plat.image }}</td>
                <td>{{ plat.tag }}</td>
                <td>{{ plat.prix }}</td>
                <td>
                    <a href="{{ path('plats_show', {'id': plat.id}) }}">show</a>
                    <a href="{{ path('plats_edit', {'id': plat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('plats_new') }}">Create new</a>
{% endblock %}
