{% extends 'base.html.twig' %}

{% block title %}Noot Noot Food !{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Stack the columns on mobile by making one full-width and the other half-width -->
        <div class="row pt-5">
            <div class="col-md-3 menu background-orange">
                <button class="mt-3 btn peach-gradient btn-select">
                    <a href="{{ path('tag_plat', {tag:'pizza'}) }}">
                        <i class="fas fa-pizza-slice"></i>
                        &nbsp;&nbsp;Toutes les pizzas
                    </a>
                </button>
                <button class="mt-3 btn peach-gradient btn-select">
                    <a href="{{ path('tag_plat', {tag:'sushi'}) }}">
                        <i class="fas fa-fish"></i>
                        &nbsp;&nbsp;Tous les sushis
                    </a>
                </button>
                <button class="mt-3 btn peach-gradient btn-select">
                    <a href="{{ path('tag_plat', {tag:'burger'}) }}">
                        <i class="fas fa-hamburger"></i>
                        &nbsp;&nbsp;Tous les burgers
                    </a>
                </button>
            </div>
            <div class="col-md-9 choix">
                <div class="container">
                    <div class="row">
                        {% for plat in plats %}
                            <div class="col-md-4 mt-5">
                                <div class="card-container">
                                    <div class="card">
                                        <div class="front">
                                            <div class="cover">
                                                <img src="{{ plat.image }}"/>
                                            </div>
                                            <div class="content">
                                                <div class="main">
                                                    <h3 class="name">{{ plat.nom }}</h3>
                                                </div>
                                            </div>
                                        </div> <!-- end front panel -->
                                        <div class="back">
                                            <div class="content">
                                                <div class="main">
                                                    <h4 class="text-center mt-3 menuDescription">{{ plat.description }}
                                                        <br><br>
                                                        <hr>
                                                        <!-- Button -->
                                                        <a href="{{ path('plat', {'id':plat.id}) }}" class="btn btn-orange">
                                                            J'ai les crocs,<br>je commande Ã§a !
                                                        </a>
                                                    </h4>
                                                </div>
                                            </div>
                                        </div> <!-- end back panel -->
                                    </div> <!-- end card -->
                                </div> <!-- end card-container -->
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}